<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="16dp"
    card_view:cardElevation="6dp"
    android:layout_marginBottom="16dp"
    android:layout_marginHorizontal="8dp"
    android:backgroundTint="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/packageIcon"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/ic_package"
            android:layout_marginEnd="16dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/packageTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Monthly Package"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#212121" />

            <TextView
                android:id="@+id/packageDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Includes 12 classes per month"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/packagePrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price: NPR 1500"
                android:textStyle="bold"
                android:textColor="#4CAF50"
                android:layout_marginTop="6dp" />

            <Button
                android:id="@+id/subscribeBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Subscribe"
                android:textColor="@android:color/white"
                android:backgroundTint="#5E60CE"
                android:layout_marginTop="8dp" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>