<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.khalti">
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.khalti" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/khaltiPrimary</item>
        <item name="colorPrimaryDark">@color/khaltiPrimaryDark</item>
        <item name="colorAccent">@color/khaltiAccent</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ToolbarStyle" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="colorAccent">@color/khaltiPrimary</item>
    </style>

    <style name="ToolbarTextStyle" parent="@style/Base.TextAppearance.AppCompat.Title">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="EditTextTheme" parent="Theme.AppCompat">
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/secondaryText</item>
        <item name="android:textSize">20sp</item>

        <item name="colorControlNormal">@color/primaryText</item>
        <item name="colorControlActivated">@color/khaltiPrimary</item>
    </style>

    <style name="EditTextTheme.HintAppearance" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">8sp</item>
    </style>

    <style name="DividerDark">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/divider</item>
    </style>
</resources>